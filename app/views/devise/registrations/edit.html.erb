<%= render "/pages/header" %>
<!-- HOME -->
  <section class="module module-header bg-dark bg-dark-50" data-background="/images/background.jpg">
    <div class="container">
      <!-- MODULE TITLE -->
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <%= bootstrap_flash %>
          <h1 class="module-title font-alt align-center">Atualize seu dados</h1>
          <div class="module-subtitle font-inc align-center">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <%= f.input :email,label: "E-mail", required: true, autofocus: true %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>

                  <%= f.input :password, autocomplete: "off", hint: "Deixe em branco se nÃ£o quiser alterar", required: false %>
                  <%= f.input :password_confirmation, required: false %>
                  <%= f.input :current_password, hint: "Digite sua senha atual para salvar", required: true %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Atualizar dados" %>
                </div>
              <% end %>

              <%= link_to :back do %>
              <i class="fa fa-chevron-left"></i>
              Voltar
              <% end -%>
          </div>
        </div>
      </div>
      <!-- /MODULE TITLE -->
    </div>
  </section >
<!-- /HOME -->
<%= render "/pages/footer" %>